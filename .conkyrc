# .conkyrc

update_interval 2.0
# zere makes conky to run forever
total_run_times 0

# to prevent flicking
double_buffer yes

# Create own window instead of using desktop (required in nautilus)
own_window yes
# enable pseudo-transparency
#own_window_transparent yes
#own_window_type normal
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# use anti-aliased fonts
use_xft yes
xftalpha 0.8
xftfont Vera Sans YuanTi:size=11
# don't show text in UGLY UPPER-CASE
uppercase no
# force utf-8 ; xftfont is required
override_utf8_locale yes

default_color white
#own_window_colour white

# Predefine  a  color for later use inside TEXT segments
#color1 #123456
# Predefine  a template for later use inside TEXT segments
#templateN hello
#maximum_width 250
alignment top_right
#default_bar_size 0 10

# Draw shades?
draw_shades no
# Draw outlines?
draw_outline no
# Draw borders around text
draw_borders no
# Stippled borders?
stippled_borders 0
# border width
border_width 1

# number of cpu samples to average ;set to 1 to disable averaging
cpu_avg_samples 2
# number of samples to average for disk I/O monitoring
diskio_avg_samples 2
# number of net samples to average ;set to 1 to disable averaging
net_avg_samples 2

# values which are in bytes will be printed in human readable format(i.e., KiB,  MiB, etc).
format_human_readable yes
# Shortens units to a single character (kiB->k, GiB->G, etc.)
short_units yes

show_graph_range yes
show_graph_scale yes


