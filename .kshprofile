# ~/.profile: executed by the command interpreter for login shells.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.


#------------------------------------------------------------------------------
#                              basic setting                                  #
#------------------------------------------------------------------------------

# the default umask is already set in /etc/profile
umask 022

# include user's bin into PATH ,if it exists
if [ -d "${HOME}/bin" ] ; then
    export PATH="${PATH}:${HOME}/bin"
fi


#------------------------------------------------------------------------------
#                           environment variables                             #
#------------------------------------------------------------------------------

# If under X window environment,
if [ -n "$DISPLAY" ]  ; then

    #grant root the access to X server
    xhost +local:root
fi

#------------------------------------------------------------------------------
#                                 load bashrc                                 #
#------------------------------------------------------------------------------

# if running bash
if [ -n "${BASH_VERSION}" ]; then
    # include .bashrc if it exists
    if [ -f "${HOME}/.bashrc" ]; then
        source "${HOME}/.bashrc"
    fi
fi


#------------------------------------------------------------------------------
#                                   SSH keyring                               #
#------------------------------------------------------------------------------


# keychain is preferred, because the agent it starts persists across login
if which keychain &> /dev/null ; then
    eval $(keychain --eval)
else

    # ----------setup ssh-agent manually ---------- #
    SSH_AGENT=/usr/bin/ssh-agent

    if [ -z "${SSH_AUTH_SOCK}" -a -x "${SSH_AGENT}" ]; then
        # now, all application within this session know how to communicate with
        # ssh-agent by enviroment variable $SSH_AGENT_PID
        eval `${SSH_AGENT} -s`

        # kill this session's ssh-agent before login-shell exits
        trap "kill -9 ${SSH_AGENT_PID}" 0

        # prompt user to load private key into ssh-agent
        #ssh-add
    fi


    # ----------setup gpg-agent manually ---------- #
    GPG_ENV_FILE="${HOME}/.gnupg/gpg-agent.env"

    if test -f "$GPG_ENV_FILE" && kill -0 $(grep GPG_AGENT_INFO "$GPG_ENV_FILE" | cut -d: -f 2) 2>/dev/null; then
        eval "$(cat "$GPG_ENV_FILE")"
    else
        eval "$(gpg-agent --daemon --write-env-file "$GPG_ENV_FILE")"
    fi
    # the env file does not contain the export statement
    export GPG_AGENT_INFO

fi

#------------------------------------------------------------------------------
#                               start gappproxy client                        #
#------------------------------------------------------------------------------

if [ -x "${HOME}/bin/gappproxy" ];then
    ~/bin/gappproxy &
fi
