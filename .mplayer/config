# Write your default config options here!
#added by whodare

# audio driver
ao = alsa
# use xv as video driver ; low resource usage
vo = xv

# disble screenserver when movie is being played
stop-xscreensaver = "yes"

# solve the sync problem when playing .flv file
autosync = 0
mc = 0

#aspect  ratio  of your monitor
monitoraspect = "16:10"

# load all subtitiles in the current folder
sub-fuzziness = 2

# allow showing multiple subtitle at the same time
overlapsub = "yes"

# encoding of subtitile file
subcp = cp936

# scaling subtitle proportionally to :
#  1 : movie height
#  2 : movie width
#  3 : movie diagonal(default)
subfont-autoscale=2

#autoscale coefficient of the OSD element
subfont-osd-scale=6

#subtitle text autoscale coefficient as percentage of the screen size
subfont-text-scale = 6

# font file
font = "subfont.ttf"
#font = "Vera Sans YuanTi"
#font = "WenQuanYi Micro Hei"

# encoding of font file
subfont-encoding = "unicode"

# Turn on SSA/ASS subtitle rendering
ass = "on"

# font hinting type; 1 means light
ass-hinting = 1

# never apply software scaling
zoom = "no"

# speed up playbacking

#speed = "1.1"
#
framedrop=yes
subcp=cp936
subfont-autoscale=2
subfont-text-scale=3
subfont-osd-scale=3
overlapsub=yes
ao=win32
af=volnorm,volume=4
fs=no
cache=20480
#ontop=yes
#这一行是置顶.
quiet=no
autoq=6
#vf="pp=hb:y/vb:y/ha:y:128:7/va:y/dr:y/al/,expand=0:-50:0:0"
#上面一行里面, PP是postprocess的意思,如果你的CPU足够好,那就打开这个功能,据说能提高画质.不过我没怎么看出来. Expand是在画面的下面搞出来黑条,用来放字幕,这样字幕就不会挡在画面里面了
priority=abovenormal
#设置MPlayer的CPU优先级,高一点的话能保证不卡
#really-quiet=y
benchmark=y
ass=y
ass-font-scale=2
ass-use-margins=y
ffactor=1
#osdlevel=0
spuaa=3
dr=y
